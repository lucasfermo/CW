    "def reduce_pyramid(base):\n",
    "    p=[1]\n",
    "    n=len(base)-1\n",
    "    for k in range(n):\n",
    "        p.append((p[k]*(n-k)/(k+1))//1)\n",
    "    s=sum([p[i]*base[i] for i in range(len(p))])\n",
    "    \n",
    "    return s\n",
    "\n",
    "        \n",
    "reduce_pyramid([5,6,7])"
   ]
  }
